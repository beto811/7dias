import random

# Número pré-definido para ser adivinhado
numero_secreto = 7

# Função principal do jogo
def adivinhar_numero():
    print("Bem-vindo ao jogo de adivinhar o número!")
    tentativas = 3  # O número total de tentativas (1 tentativa inicial + 2 tentativas extras)
    
    # Laço para as tentativas
    for tentativa in range(tentativas):
        # Solicita um palpite ao jogador
        palpite = int(input(f"Tentativa {tentativa + 1} de {tentativas}. Qual é o seu palpite? "))
        
        # Verifica se o palpite está correto
        if palpite == numero_secreto:
            print("Parabéns, você acertou!")
            return
        
        # Caso erre, avisa que errou e continua tentando
        else:
            print("Errou! Tente novamente.")
    
    # Caso o jogador não acerte nas 3 tentativas
    print(f"Você não acertou! O número secreto era {numero_secreto}.")

# Chama a função para iniciar o jogo
adivinhar_numero()
